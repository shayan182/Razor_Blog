@page
@model Razor_Blog.Pages.CreateArticleModel
@{
    ViewData["Title"] = "ایجاد مقاله جدید";
}

<div class="col-12 mb-3">
    <div class="col-6 mr-auto ml-auto text-center">
        <h1 class="border-bottom">ایجاد مقاله جدید</h1>
    </div>
</div>
<form class="mr-auto ml-auto" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.CreateArticle.Title"></label>
            <input class="form-control" asp-for="@Model.CreateArticle.Title">
            <span class="text-danger" asp-validation-for="@Model.CreateArticle.Title" ></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.CreateArticle.Picture"></label>
            <input class="form-control" asp-for="@Model.CreateArticle.Picture">
            <span class="text-danger" asp-validation-for="@Model.CreateArticle.Picture" ></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.CreateArticle.PictureAlt"></label>
            <input class="form-control" asp-for="@Model.CreateArticle.PictureAlt">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.CreateArticle.PictureTitle"></label>
            <input class="form-control" asp-for="@Model.CreateArticle.PictureTitle">
        </div>
        <div class="form-group col-md-12">
            <label asp-for="@Model.CreateArticle.ShortDescription"></label>
            <textarea class="form-control" asp-for="@Model.CreateArticle.ShortDescription"></textarea>
            <span class="text-danger" asp-validation-for="@Model.CreateArticle.ShortDescription" ></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.CreateArticle.Body"></label>
        <textarea rows="5" type="text" class="form-control" asp-for="@Model.CreateArticle.Body"></textarea>
    </div>
    <button type="submit" class="btn btn-success">ارسال</button>
</form>